@model RemyNewWebApp.Models.ViewModels.AssignDeveloperViewModel

<div class="col-6 p-6">
    <div class="card mb-5 mb-xxl-8">
        <!--begin::Body-->
        <div class="card-body pb-0">
            <!--begin::Post-->
            <div class="mb-7">
                <!--begin::Text-->
                <div class="row text-gray-800 mb-5">
                    <div class="col">
                        <form asp-action="AssignDeveloper" method="post">
                            <input asp-for="Ticket.Id" hidden />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="fs-2 fw-bolder">@Model.Ticket.Title</p>
                            <a style="font-size:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>
                            <p class="fw-light fs-6">@Model.Ticket.Description</p>
                            <div class="form-group mb-4">
                                <label class="form-label">Select Ticket Developer</label>
                                <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group mt-3">
                                <button id="update-profile-button" type="submit" class="btn btn-primary">Assign</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!--end::Text-->
            </div>
            <!--end::Post-->
        </div>
        <!--end::Body-->
    </div>
</div>
<div class="ms-6">
    <a asp-action="UnassignedTickets" asp-controller="Tickets">Return to Unassigned Tickets</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
