                                            </svg>
                                        </span>
                                        <!--end::Svg Icon-->
                                    </div>
                                </div>
                                <!--end::Avatar-->
                                <!--begin::Info-->
                                <div class="d-flex flex-column">
                                    <a class="text-gray-900 text-hover-primary fs-6 fw-bolder">Tickets</a>
                                    <span class="fw-bold text-muted">All tickets submitted in this Project</span>
                                </div>
                                <!--end::Info-->
                            </div>
                            <!--end::User-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body p-9 pt-3 pb-3">
                            <!--begin::Tickets-->
                            @foreach (var ticket in Model.Tickets)
                            {
                                <!--begin::Header-->
                                <div class="d-flex align-items-center mb-3">
                                    <!--begin::User-->
                                    <div class="d-flex align-items-center flex-grow-1">
                                        <!--begin::Avatar-->
                                        <div class="symbol symbol-circle symbol-75px me-3">
                                            <img src="data:image/*;base64,@Convert.ToBase64String(Model.Tickets.FirstOrDefault(t => t.Id == ticket.Id).OwnerUser.AvatarFileData)" />
                                        </div>
                                        <!--end::Avatar-->
                                        <!--begin::Info-->
                                        <div class="d-flex flex-column">
                                            <span class="text-gray-900 text-hover-primary fs-6 fw-bolder">Created by: @Model.Tickets.FirstOrDefault(t => t.Id == ticket.Id).OwnerUser.FullName</span>
                                            <span class="text-gray-400 fw-bold">@Model.Tickets.FirstOrDefault(t => t.Id == ticket.Id).Created.ToString("dd/MM/yy")</span>
                                        </div>
                                        <!--end::Info-->
                                    </div>
                                    <!--end::User-->
                                </div>
                                <!--end::Header-->
                                <!--begin::Post-->
                                <div class="mb-7">
                                    <!--begin::Text-->
                                    <div class="text-gray-800 mb-5"> @Model.Tickets.FirstOrDefault(t => t.Id == ticket.Id).Title</div>
                                    <!--end::Text-->
                                </div>
                                <!--end::Post-->
                            }
                            <!--end::Tickets-->
                        </div>
                        <!--end::Card body -->
