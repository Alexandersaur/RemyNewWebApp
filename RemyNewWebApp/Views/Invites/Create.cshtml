@model RemyNewWebApp.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="container" id="kt_content_container">
    <div class="row gy-5 g-xl-10">
        <div class="col-xxl-12">
            <!--begin::List Widget 4-->
            <div class="card card-xl-stretch mb-5 mb-xl-10">
                <div class="card-header border-0 pt-5">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bolder text-dark">Invite New Member!</span>
                        <span class="text-muted mt-1 fw-bold fs-7">Input information below</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <!--begin::Item-->
                    <div class="d-flex align-items-sm-center mb-4">
                        <div class="row">
                            <form asp-action="Create">
                                <div class="col-12">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="InviteeEmail" class="control-label"></label>
                                        <input asp-for="InviteeEmail" class="form-control" />
                                        <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="InviteeFirstName" class="control-label"></label>
                                        <input asp-for="InviteeFirstName" class="form-control" />
                                        <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="InviteeLastName" class="control-label"></label>
                                        <input asp-for="InviteeLastName" class="form-control" />
                                        <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row row-xs align-items-md-center mg-b-20">
                                        <div class="col-md-4">
                                            <label class="mg-b-0">Message</label>
                                            <div class="col-md-8 mtg-mg-t-0">
                                                <textarea asp-for="Message"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProjectId" class="control-label"></label>
                                        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input type="submit" value="Invite!" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
